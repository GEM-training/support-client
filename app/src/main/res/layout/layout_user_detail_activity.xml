<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_tool_bar"
        android:orientation="horizontal">

            <ImageView
                android:scaleType="fitStart"
                android:id="@+id/img_user_detail_back"
                android:layout_marginLeft="@dimen/icon_back_margin_left"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/back_button_width"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_back"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/tv_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/width_userdetail_img"
        android:layout_height="@dimen/height_userdetail_img"
        android:padding="3dp"
        android:background="@drawable/border_image">

        <ImageView
            android:id="@+id/img_user_icon"
            android:src="@drawable/icon_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
    
    <FrameLayout
        android:layout_marginTop="@dimen/tv_margin"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userdetail_tv_name"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/account_icon"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="@dimen/width_userdetail_account_icon"
            android:layout_height="@dimen/width_userdetail_account_icon" />

        <TextView
            android:id="@+id/tv_user_detail_name"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:text="Nguyen Van Hop"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="62dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userdetail_tv_name"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="@dimen/width_userdetail_account_icon"
            android:layout_height="@dimen/width_userdetail_account_icon"
            android:src="@drawable/email_icon"/>

        <TextView
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666"
            android:text="@string/work"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_detail_email_work"
            android:paddingRight="@dimen/tv_margin"
            android:gravity="right"
            android:text="hopnv@gemvietnam.com"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="62dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userdetail_tv_name"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="@dimen/width_userdetail_account_icon"
            android:layout_height="@dimen/width_userdetail_account_icon"
            android:src="@drawable/email_icon"/>

        <TextView
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666"
            android:text="@string/home"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_detail_email_home"
            android:paddingRight="@dimen/tv_margin"
            android:gravity="right"
            android:text="hopnv@gemvietnam.com"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="62dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userdetail_tv_name"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="@dimen/width_userdetail_account_icon"
            android:layout_height="@dimen/width_userdetail_account_icon"
            android:src="@drawable/phone_icon"/>

        <TextView
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666"
            android:text="@string/work"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_detail_phone"
            android:paddingRight="@dimen/tv_margin"
            android:gravity="right"
            android:text="+84(01673255990)"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="62dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userdetail_tv_name"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="@dimen/width_userdetail_account_icon"
            android:layout_height="@dimen/width_userdetail_account_icon"
            android:src="@drawable/location_icon"/>

        <TextView
            android:layout_marginTop="5dp"
            android:lines="2"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666"
            android:text="@string/work"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:lines="2"
            android:id="@+id/tv_user_detail_address"
            android:paddingRight="@dimen/tv_margin"
            android:gravity="right"
            android:text="62 Tran Thai Tong, Cau Giay, Ha Noi, Viet Nam"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/tv_margin"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>








</LinearLayout>